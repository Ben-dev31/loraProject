
<TaskBox>
    size_hint: None,None
    md_bg_color: 'teal'
    width: dp(350)
    height: dp(150)
    padding: "4dp"
    style: "elevated"
    MDRelativeLayout:
        MDIconButton:
            icon: "dots-vertical"
            pos_hint: {"top": 1, "right": 1}
            on_release : root.menu_open(self)

        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {"top": 1, "right": 1}
            MDLabel:
                text: f"[color=ffffff][b]{root.Title}[/b][/color]"
                markup: True
                halign: 'center'

            MDGridLayout:
                rows:3
                cols:2
                MDLabel:
                    text:f"Date: {root.Date}"
                    halign: 'center'
                MDLabel:
                    text:root.Time
                    halign: 'center'
                MDLabel:
                    text:f"Lieu: {root.Location}"
                    halign: 'center'
                MDLabel:
                    text:root.Detail
                    halign: 'center'
                MDLabel:
                    text: f"[color=3fc51e]{root.Frequence}[/color]"
                    markup: True
                    halign: 'center'

